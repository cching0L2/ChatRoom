mixin toolbar(user)
  #toolbar
    div.right
      if user 
        div.welcome
          h4.msg Hello, #[span.username= user.username + ' !']
      div.buttons
        if !user
            button#register #[a(href="/auth/register") Register] 
            button#login #[a(href="/auth/login") Login] 
        else    
            button#logout #[a(href="/auth/logout") Logout] 
      
